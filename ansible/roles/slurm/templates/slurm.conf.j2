ClusterName={{ slurm_cluster_name }}
SlurmctldHost={{ slurm_controller_host }}({{ slurm_controller_ip }})
AuthType=auth/munge
SlurmUser={{ slurm_ctrl_user }} # must match with the user of slurmctld

SlurmctldLogFile={{ slurm_log_dir }}/slurmctld.log
SlurmdLogFile={{ slurm_log_dir }}/slurmd.log

SlurmctldPidFile={{ slurmctld_run_dir }}/slurmctld.pid
SlurmdPidFile={{ slurmd_run_dir }}/slurmd.pid

# Controller State (Saved jobs)
StateSaveLocation={{ slurm_spool_dir }}/ctld
# Node State (Local cache)
SlurmdSpoolDir={{ slurm_spool_dir }}/d

{% for node in slurm_compute_node_list %}
NodeName={{ node.name }} NodeAddr={{ node.ip }} CPUs=1 State=UNKNOWN
{% endfor %}

PartitionName=debug Nodes=ALL Default=YES MaxTime=INFINITE State=UP
AccountingStorageHost={{ slurm_controller_host }}
AccountingStorageType=accounting_storage/slurmdbd

ProctrackType=proctrack/cgroup
